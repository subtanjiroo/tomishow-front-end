                    .swiper-container {
                        width: 100%;
                        padding: 20px 0;
                        overflow: hidden; /* Ẩn các phần của slide chưa vuốt tới */
                    }

                    .swiper-slide {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        text-align: center;
                        flex-shrink: 0; /* Ngăn không cho các slide bị co lại */
                        width: 100%; /* Đảm bảo mỗi slide chiếm toàn bộ chiều rộng */
                    }

