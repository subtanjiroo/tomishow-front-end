        opacity: 0;
        transform: translateY(50px);
    }

    /* Khi có class "show-animation", chạy animation */
    .show-animation .banner1, 
    .show-animation .banner1_h1, 
    .show-animation .banner2, 
    .show-animation .banner1_span {
        animation: fadeUp 0.5s forwards;
    }

    .show-animation .banner1 {
        animation-delay: 0.2s; 
    }

    .show-animation .banner1_h1 {
